{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run make (default)",
            "type": "shell",
            "command": "/usr/bin/make",
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run make remake",
            "type": "shell",
            "command": "/usr/bin/make remake",
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "run make clean",
            "type": "shell",
            "command": "/usr/bin/make clean",
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
